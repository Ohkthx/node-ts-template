{
  "compilerOptions": {

    /* Basic Options */
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    // "removeComments": true,
    "strict": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
